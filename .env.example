# KneeKlinic Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# EMAIL CONFIGURATION (Required for OTP)
# ============================================
# For Gmail:
# 1. Enable 2-Factor Authentication
# 2. Generate App Password (Security â†’ App passwords)
# 3. Use the 16-character app password below
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here

# Support email for contact form
SUPPORT_EMAIL=support@kneeklinic.com

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb://localhost:27017/kneeklinic
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kneeklinic?retryWrites=true&w=majority

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_SECRET=your-session-secret-change-this-in-production

# ============================================
# OPTIONAL: AI/ML SERVICES
# ============================================
# Add your AI service API keys here if needed
# OPENAI_API_KEY=your-openai-key
# GOOGLE_AI_API_KEY=your-google-ai-key
